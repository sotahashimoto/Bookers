<h1>Books</h1>

<% @books.each do |book| %>
  <section class="book-text">
    <table border="1">
      <tr>
        <th>Title</th>
     　　<th>Body</th>
　　     <th colspan="3"></th>
　     </tr>

       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "show", book_path(book) %></td>
         <td><%= link_to "Edit", edit_book_path(book) %></td>
         <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
　     </tr>
    </table>
  </section>
<% end %>

<h2>New book</h2>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>