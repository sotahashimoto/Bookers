<h1>Editing Book</h1>


<% if @book.errors.any? %>
  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<!-- form_forでフォームを作成する -->
<!-- |f| ブロック変数と言いdoからendの間だけ使える変数 -->
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path(@books) %>